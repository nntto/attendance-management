// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  userId   Int        @id @default(autoincrement()) @map("user_id")
  name     String
  grade    String?
  iconUrl  String?    @map("icon_url")
  Device   Device[]
  Comment  Comment[]
  Nickname Nickname[]
}

model Room {
  roomId  Int       @id @default(autoincrement()) @map("room_id")
  name    String
  Network Network[]
}

model Device {
  deviceId   Int          @id @default(autoincrement()) @map("device_id")
  name       String?
  userId     Int?         @map("user_id")
  User       User?        @relation(fields: [userId], references: [userId])
  MacAddress MacAddress[]
}

model MacAddress {
  macAddressId    Int      @id @default(autoincrement()) @map("mac_address_id")
  address         String
  networkId       Int?     @map("network_id")
  Network         Network? @relation(fields: [networkId], references: [networkId])
  deviceId        Int?     @map("device_id")
  Device          Device?  @relation(fields: [deviceId], references: [deviceId])
  lastConnectedAt DateTime @default(now()) @map("last_connected_at")
}

model Nickname {
  nicknameId Int    @id @default(autoincrement()) @map("nickname_id")
  fromId     Int    @map("from_id")
  toId       Int    @map("to_id")
  nickname   String
  User       User   @relation(fields: [toId], references: [userId])
}

model Comment {
  commentId Int      @id @default(autoincrement()) @map("comment_id")
  userId    Int      @map("user_id")
  User      User     @relation(fields: [userId], references: [userId])
  comment   String
  createdAt DateTime @default(now()) @map("created_at")
}

model Network {
  networkId  Int          @id @default(autoincrement()) @map("network_id")
  name       String
  roomId     Int          @map("room_id")
  Room       Room         @relation(fields: [roomId], references: [roomId])
  MacAddress MacAddress[]
}
